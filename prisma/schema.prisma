datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

generator typegraphql {
  provider = "typegraphql-prisma"
  output   = "../prisma/generated/type-graphql"
}

model User {
  id                    String      @id @default(uuid())
  email                 String      @unique
  name                  String
  /// @TypeGraphQL.omit(output: true)
  password              String
  role                  Role
  verificationOtp       String?
  verificationOtpExpiry DateTime?
  verification          Boolean     @default(false)
  resetPassOtp          String?
  resetPassOtpExpiry    DateTime?
  customer              Customer?
  restaurant            Restaurant?
}

model Customer {
  id      Int             @id @default(autoincrement())
  address String[]
  picture String?
  user    User            @relation(fields: [userId], references: [id])
  userId  String          @unique
  orders  Order[]
  cart    OrderItemCart[]
}

model Restaurant {
  id             Int     @id @default(autoincrement())
  name           String?
  location       String?
  user           User    @relation(fields: [userId], references: [id])
  userId         String  @unique
  operatingHours String?
  menu           Food[]
  orders         Order[]
}

model Food {
  id           String          @id @default(uuid())
  name         String
  description  String
  category     FoodCategory
  price        Float
  picture      String?
  restaurant   Restaurant      @relation(fields: [restaurantId], references: [id])
  restaurantId Int
  carts        OrderItemCart[]
  // orders       Order[]
}

model OrderItemCart {
  id         Int      @id @default(autoincrement())
  food       Food     @relation(fields: [foodId], references: [id])
  foodId     String
  quantity   Int
  // order      Order?   @relation(fields: [orderId], references: [id]) // Optional relation to Order
  // orderId    Int? // Nullable orderId, allowing cart items to exist without an order
  customer   Customer @relation(fields: [customerId], references: [userId]) // Each cart item belongs to one customer
  customerId String
  totalPrice Float
}

model Order {
  id              Int         @id @default(autoincrement())
  customer        Customer    @relation(fields: [customerId], references: [userId])
  customerId      String
  restaurant      Restaurant  @relation(fields: [restaurantId], references: [id])
  restaurantId    Int
  totalPrice      Float
  foods           Json
  deliveryAddress String
  // items        OrderItemCart[]
  deliveryPerson  String? // Delivery person assigned to the order
  deliveryTime    DateTime? // Time when the delivery was completed
  status          OrderStatus @default(PENDING)
  createdAt       DateTime    @default(now())
}

enum OrderStatus {
  PENDING
  ACTIVE
  DELIVERED
  CANCELED
  ASSIGNED
  OUT_FOR_DELIVERY
}

enum FoodCategory {
  SNACKS
  MEAL
  VEGAN
  DESSERT
  DRINKS
}

enum Role {
  CUSTOMER
  RESTAURANT
}
